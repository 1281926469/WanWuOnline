<view class="detail">
    <view class="item" bindtap="editName">
        <text class="title">设备名称</text>
        <image class="arrow" src="./../images/arrow.png"></image>
        <text class="data" selectable="true">{{name}}</text>
    </view>
    <view class="item">
        <text class="title">IMEI</text>
        <text class="copy" bindtap="copyText" data-content="{{imei}}">复制</text>
        <text class="data" selectable="true">{{imei}}</text>
    </view>
    <view class="item editRemark" bindtap="editRemark">
        <text class="title">备注</text>
        <image class="arrow" src="./../images/arrow.png"></image>
        <text class="data">{{remark}}</text>
    </view>
    <view class="item" bindtap="editCard">
        <text class="title">物联卡号</text>
        <image class="arrow" src="./../images/arrow.png" wx:if="{{!goome_card}}"></image>
        <text class="data">{{iotCard}}</text>
    </view>
    <view class="item">
        <text class="title">最后通讯时间</text>
        <text class="data">{{heart_time}}</text>
    </view>
</view>
<!-- <view class="charge">充值</view> -->
<view class="detail">
    <view class="item">
        <text class="title">设备类型</text>
        <text class="data">{{type}}</text>
    </view>
    <view class="item">
        <text class="title">开通时间</text>
        <text class="data">{{enableTime}}</text>
    </view>
    <view class="item">
        <text class="title">到期时间</text>
        <text class="data">{{outTime}}</text>
    </view>
</view>
